{
  "private": true,
  "scripts": {
    "delete:feature:branches": "git fetch --prune && git branch | grep -v \"^\\s*master$\" | grep -v \"^\\s*release/\" | grep -v \"^\\s*int/\" | xargs -r -n 1 git branch -D",
    "debug": "sfdx force:apex:log:tail --color | grep -e 'USER_DEBUG'",
    "display:org": "sf org display",
    "display:org:user": "sf org display --user",
    "install:dep": "sf toolbox package dependencies install",
    "install:toolbox": "echo y | sf plugins install @dx-cli-toolbox/sfdx-toolbox-package-utils",
    "list:orgs": "sf org list",
    "list:dep": "node scripts/listDependencies.js",
    "list:orgs:nostatus": "sf org list --skip-connection-status --all",
    "list:packages": "sfdx force:package:list",
    "precommit": "npm run apexdocs && git add docs && lint-staged",
    "prettier": "npx prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:fast": "npx prettier --apex-standalone-parser built-in --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "npx prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "pmd": "pmd check -d force-app -R main.xml",
    "push": "sf project deploy start --verbose -w 5",
    "push:force": "sf project deploy start -w 5 --ignore-conflicts",
    "open": "sf org open",
    "scan:all": "sfdx scanner:run -t ./force-app --pmdconfig=pmd/ruleset.xml",
    "scan:all:html": "sfdx scanner:run --target ./force-app/main/default --pmdconfig=pmd/ruleset.xml -f html -o pmd/SCAReport.html",
    "scan:all:report": "sfdx scanner:run -t ./force-app --pmdconfig=pmd/ruleset.xml --outfile pmd/scan-report.csv",
    "scan:apex": "sfdx scanner:run -t ./force-app/main/default/classes --pmdconfig=pmd/ruleset.xml",
    "scan:apex:report": "sfdx scanner:run -t ./force-app/main/default/classes --pmdconfig=pmd/ruleset.xml --outfile pmd/scan-report.csv",
    "scan:lwc": "sfdx scanner:run -t ./force-app/main/default/lwc --category \"Security,ECMAScript6,Possible Errors,problem\"",
    "scan:lwc:report": "sfdx scanner:run -t ./force-app/main/default/lwc --category \"Security,ECMAScript6,Possible Errors,problem\" --outfile ./docs/pmd/scan-report.csv",
    "test:apex:all": "sfdx force:apex:test:run --testlevel RunLocalTests --wait 30 --resultformat human",
    "test:lwc": "npm run test:lwc:unit",
    "test:lwc:unit": "sfdx-lwc-jest",
    "test:lwc:unit:coverage": "sfdx-lwc-jest --coverage",
    "test:lwc:unit:ci": "sfdx-lwc-jest --coverage -- --coverageReporters=\"json-summary\"",
    "test:lwc:unit:debug": "sfdx-lwc-jest --debug",
    "test:lwc:unit:watch": "sfdx-lwc-jest --watch",
    "prepare": "husky",
    "lint": "eslint **/lwc/**/*.js",
    "prettier:apex:local": "prettier --plugin=@prettier/plugin-xml --plugin=prettier-plugin-apex --apex-standalone-parser built-in --apex-standalone-host 127.0.0.1 --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify:apex:local": "prettier --plugin=@prettier/plugin-xml --plugin=prettier-plugin-apex --apex-standalone-parser built-in --apex-standalone-host 127.0.0.1 --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify:apex:local:pr": "prettier --plugin=@prettier/plugin-xml --plugin=prettier-plugin-apex --apex-standalone-parser built-in --apex-standalone-host 127.0.0.1 --check ",
    "apexdocs": "sh bin/generate-apex-docs.sh",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "update:dev:dep": "rm -rf node_modules && npm install",
    "actions:tests": "node node_modules/jest/bin/jest.js --config=.github/workflows/actions-jest-config.js",
    "actions:tests-exp": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=.github/workflows/actions-jest-config.js",
    "docs:dev": "vitepress dev apexdocs",
    "docs:build": "vitepress build apexdocs",
    "docs:preview": "vitepress preview apexdocs"
  },
  "type": "module",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@cparra/apexdocs": "^3.9.0",
    "@lwc/eslint-plugin-lwc": "^1.8.2",
    "@octokit/types": "^13.6.1",
    "@prettier/plugin-xml": "^3.4.1",
    "@sa11y/jest": "^6.13.0",
    "@salesforce/eslint-config-lwc": "^3.6.0",
    "@salesforce/eslint-plugin-aura": "^2.1.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^7.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "ansi-regex": "^6.1.0",
    "axios": "^1.7.7",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "follow-redirects": "^1.15.9",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "micromatch": "^4.0.8",
    "minimist": "^1.2.8",
    "moment-timezone": "^0.5.46",
    "nock": "^13.5.6",
    "octokit": "^4.0.2",
    "pgrep": "^0.0.6",
    "prettier": "^3.3.3",
    "prettier-plugin-apex": "^2.2.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.2.5",
    "vitepress": "^1.6.3"
  },
  "volta": {
    "node": "18.18.1"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --allow-empty --write"
    ],
    "**/lwc/**/*.js": [
      "eslint"
    ]
  }
}
