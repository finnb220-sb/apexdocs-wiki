<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
                name="wrapperCssClass"
                type="String"
                label="Wrapper CSS Class"
                description="Provide CSS class(es) to style the title as a whole (e.g. padding, margins)" />
            <property name="hideIcon" type="Boolean" label="Hide icon" default="false" />
            <property name="iconName" type="String" label="Icon Name" placeholder="standard:account" />
            <property
                name="iconSize"
                type="String"
                label="Icon size"
                description="xx-small, x-small, small, medium, or large" />
            <property
                name="iconVariant"
                type="String"
                label="Icon variant"
                description="inverse, success, warning, or error" />
            <property name="iconForegroundColor" type="String" label="Icon Foreground Color" />
            <property name="iconBackgroundColor" type="String" label="Icon Background Color" />
            <property
                name="iconCssClass"
                type="String"
                label="Icon CSS Class"
                description="Provide CSS class(es) to style the icon" />
            <property name="title" type="String" label="Title" placeholder="My Flow" />
            <property
                name="titleCssClass"
                type="String"
                label="Title CSS Class"
                placeholder="slds-text-heading_small"
                description="Provide CSS class(es) to style the title text" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
